<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="settings_google_contact_sync_view_form" model="ir.ui.view">
            <field name="name">settings.google.contact.sync</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="business_documents" position="after">
                    <div id="google_contacts">
                        <h2>Google Contacts</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <label for="google_contacts_client_id"/>
                                        <field name="google_contacts_client_id" class="oe_inline"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <label for="google_contacts_client_secret"/>
                                        <field name="google_contacts_client_secret" class="oe_inline"/>
                                    </div>
                                </div>
                            </div>
                            <!--<field name="google_contacts_uri" widget="url" text="Generate Google Authorization Code" class="oe_inline oe_bold"/>
                            and paste it here
                            <field name="google_contacts_authorization_code" class="oe_inline"/>-->
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>
