<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

      <record id="google_contacts_view_tree" model="ir.ui.view">
          <field name="name">res.partner.google.contacts.view.tree</field>
          <field name="model">res.partner</field>
          <field name="arch" type="xml">
              <tree>
                  <field name="name"/>
                  <field name="email"/>
                  <field name="google_contacts_id"/>
                  <field name="google_contacts_account"/>
              </tree>
          </field>
      </record>

      <record id="google_contacts_contact_action" model="ir.actions.act_window">
          <field name="name">google_contacts_contact.action</field>
          <field name="res_model">res.partner</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
          <field name="view_id" ref="google_contacts_view_tree"/>
          <field name="domain">[('google_contacts_id','!=', False)]</field>
          <field name="help" type="html">
		<p>
                    Do not create here
                </p>
      	  </field>
      </record>


  </data>
</odoo>